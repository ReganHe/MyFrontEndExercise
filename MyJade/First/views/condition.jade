- var user={name:'John'}
if user
    div.welcomebox
        // Filtered inline output
        p.
            Welcome,#{user.name}
else
    div.loginbox
        form(name="login",action="/login",method="post")
            input(type="text",name="user")
            input(type="password",name="pass")
            input(type="submit",value="login")

